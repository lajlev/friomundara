doctype html
html(lang='en')
  head
    meta(charset='UTF-8')
    meta(name='viewport', content='width=device-width, initial-scale=1')
    meta(property='og:image', content='http://laj.lv/img/logo.png')
    title Michael Lajlev &middot; Digital product designer
    link(rel='shortcut icon', href='img/favicon.ico')
    link(href='http://fonts.googleapis.com/css?family=Lato:300,400', rel='stylesheet', type='text/css')  
    link(rel='stylesheet', href='style.css')
  body
    section.about
      .site-header
        img.logo(src='http://laj.lv/img/logo.png', alt='Logo')
        
      blockquote
        p= desc
        footer
          img(src='img/lajlev.jpg', alt='#{name}')
          a(href='#{links[0].url}')
            span.name= name
            span.title= title
      
    section.timeline
      h2 timeline
      ul
        each entry in timeline
          li.entry
            .year #{entry.to} Â· #{entry.from}
            h3
              span.title= entry.title
              span @
              a.org-name(href='#{entry.orgUrl}') #{entry.orgName}
            p= entry.desc

            each reco in entry.recomendations

              blockquote
                p= reco.desc
                footer
                  img(src='img/#{reco.image}', alt='#{reco.name}')
                  a(href='#{reco.url}', title='#{reco.urlTitle}')
                    span.name= reco.name
                    span.title= reco.title
    
    section.footprint
      h2 Footprint
      ul
        each link in links
          li
            a(href='#{link.url}') #{link.name}